<?xml version="1.0" encoding="utf-8"?>
<domain name="CookingAppDomain" is_super_domain="true">
 <goal type="perform" action="top">
    <plan>
      <forget_all/>
      <findout type="alt_question">
        <alt>
          <perform action="french_omelette"/>
        </alt>
        <alt>
          <perform action="mashed_potatoes"/>
        </alt>
      </findout>
    </plan>
  </goal>


  <goal type="perform" action="french_omelette">
    <plan>
    <assume_shared>
  <proposition predicate="current_recipe" value="omelette_recipe"/>
</assume_shared>
    <get_done action="whisk_eggs"/>
    <get_done action="heat_butter"/>
    <get_done action="stir_eggs"/>
    <get_done action="fold_omelette"/>
    <get_done action="serve_omelette"/>
    <inform>
        <proposition predicate="serve" value="serve_the_omelette"/>
      </inform>
    <signal_action_completion/>
    </plan>
    </goal>

  <goal type="perform" action="mashed_potatoes">
  <plan>
  <assume_shared>
  <proposition predicate="current_recipe" value="potato_recipe"/>
</assume_shared>
  <get_done action="cut_potatoes"/>
  <get_done action="boil_potatoes"/>
  <get_done action="prepare_melted_butter"/>
  <get_done action="mash_potatoes"/>
  <get_done action="stir_potato_and_butter"/>
  <get_done action="season_mashed_potatoes"/>
  <get_done action="serve_mashed_potatoes"/>
  <inform>
        <proposition predicate="serve" value="serve_the_mashed_potatoes"/>
      </inform>
  <signal_action_completion/>
  </plan>
  </goal>


   <goal type="resolve" question_type="wh_question" predicate="butter_amount">
    <plan>
      <findout type="wh_question" predicate="current_recipe"/>
      <if>
        <is_private_belief_or_shared_commitment predicate="current_recipe" value="omelette_recipe"/>
        <then>
          <inform>
            <proposition predicate="butter_amount" value="tablespoon"/>
          </inform>
        </then>
        <else>
          <inform>
            <proposition predicate="butter_amount" value="cup"/>
          </inform>
        </else>
      </if>
    </plan>
  </goal>

  <goal type="resolve" question_type="wh_question" predicate="potato_size">
    <plan>
      <findout type="wh_question" predicate="current_recipe"/>
      <if>
        <is_private_belief_or_shared_commitment predicate="current_recipe" value="potato_recipe"/>
        <then>
          <inform>
            <proposition predicate="potato_size" value="inch_size"/>
          </inform>
        </then>
        <else>
          <inform>
            <proposition predicate="potato_size" value="no_size"/>
          </inform>
        </else>
      </if>
    </plan>
  </goal>
  
</domain>
